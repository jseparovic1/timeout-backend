<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Entity\Center" table="centers">
        <id name="id" type="integer">
            <generator/>
        </id>
        <field name="name"/>
        <field name="slug" unique="true"/>
        <field name="description"/>
        <field name="phone"/>
        <field name="email"/>
        <embedded name="address" class="App\Entity\Address"/>
        <one-to-many field="courts" target-entity="App\Entity\Court" mapped-by="center" orphan-removal="true">
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="name"/>
            </order-by>
        </one-to-many>
        <one-to-many field="workingHours" target-entity="App\Entity\WorkingHours" mapped-by="center">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
        <one-to-many field="facilities" target-entity="App\Entity\Facility" mapped-by="center">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
