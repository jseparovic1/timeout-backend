<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Timeout\Center\Court" table="courts">
        <id name="id" type="integer">
            <generator/>
        </id>
        <field name="name"/>
        <field name="description"/>
        <field name="gallery" type="array"/>
        <field name="price"/>
        <many-to-one field="sport" target-entity="App\Timeout\Sport\Sport"/>
        <many-to-one field="center" target-entity="App\Timeout\Center\Center" inversed-by="center"/>
    </entity>
</doctrine-mapping>
